<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp"
    >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ab_background_textured_theme" />

    <TextView
        android:id="@+id/txt_fName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/imageView1"
        android:text="subject"
        android:textSize="21sp"
        android:textStyle="bold" 
        android:maxLength="15"
        android:singleLine="True"/>

    <TextView
        android:id="@+id/txt_lName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/txt_fName"
        android:textSize="16sp"
        android:text="room"
        android:singleLine="True"
        />

    <GridLayout
        android:id="@+id/gridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp" >
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@+id/gridLayout1" >
    </GridLayout>

    <GridLayout
        android:id="@+id/gridLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout3"
        android:layout_toRightOf="@+id/gridLayout3" >
    </GridLayout>

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_lName"
        android:layout_alignBottom="@+id/txt_lName"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/gridLayout3"
        android:text="teacher"
        android:textSize="17sp"
        android:singleLine="True"
         />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/gridLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/gridLayout4"
        android:columnCount="4" >

        <TextView
            android:id="@+id/txt_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="hour" 
            android:textSize="31sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_min"
            android:layout_width="36dp"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text="min" 
            android:textSize="31sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="left|top"
            android:layout_row="0"
            android:text=":" 
            android:textSize="31sp"
            android:textStyle="bold" />
    </GridLayout>

</RelativeLayout>